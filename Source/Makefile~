OBJECTS = MyTools.o Circle.o Node.o main.o
PROGRAM = run
CXX = c++
DEBUG = -g

CXXFLAGS += -c -Wall $(shell pkg-config --cflags opencv)
LDFLAGS += $(shell pkg-config --libs opencv)

$(PROGRAM): $(OBJECTS)
	$(CXX) $(LDFLAGS) $(OBJECTS) -o $(PROGRAM)

# mCenek's code for compiling multiple files at the same time
MyTools.o: MyTools.cpp
	$(CXX) $(CXXFLAGS) MyTools.cpp

Circle.o: Circle.cpp
	$(CXX) $(CXXFLAGS) Circle.cpp

Node.o: Node.cpp
	$(CXX) $(CXXFLAGS) Node.cpp

main.o: main.cpp
	$(CXX) $(CXXFLAGS) main.cpp

# opencv example code
# %.o: %.cpp; $(CXX) $< -o $@ $(CXXFLAGS)

clean: ; rm -f MyTools.o Circle.o Node.o main.o flowers
